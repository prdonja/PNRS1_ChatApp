<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stevan.popov.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/UsernameTextEditMainActivity"
        android:hint="Username"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/PasswordTextEditMainActivity"
        android:hint="Password"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="350px">

        <Button
            android:id="@+id/LoginButtonMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100px"
            android:text="LOGIN"
            android:enabled="false"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/RegisterButtonMainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100px"
            android:layout_gravity="left"
            android:text="REGISTER"/>

    </LinearLayout>


</LinearLayout>
