<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stevan.popov.ContactsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/LogOutButtonContactsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/LogOut"
            android:layout_marginHorizontal="20px"/>
        <TextView
            android:id="@+id/FriendTextViewContactsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyFriend"
            android:layout_marginHorizontal="40px"/>

    </LinearLayout>

</ScrollView>
